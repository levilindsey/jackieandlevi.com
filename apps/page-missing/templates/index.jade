- var currentVersion = '?v=1.0.1';
- var baseDir = '/page-missing';

doctype html
html(lang='en')
  head
    title
      | Page Missing

    meta(charset='utf-8')
    meta(name='description', content='Jackie and Levi Lindsey\'s personal website')
    meta(name='viewport', content='width=device-width')

    link(rel='shortcut icon', href='#{baseDir}/images/favicon.ico#{currentVersion}')
    link(rel='stylesheet', href='#{baseDir}/main.css#{currentVersion}')
  body
    img(src='#{baseDir}/images/maya.jpg#{currentVersion}', alt='A cat')
    h1
      | Page Missing
    p
      | Sorry, we couldn't find your page at #{pageName}.<br><br>
      | ...so here's a picture of a cat instead!
    p
      | Why don't you start over from the &nbsp;
      a(href='/')
        | home page
      | ?

    script
      | #{analyticsScript}
